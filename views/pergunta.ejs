<%-include('partials/header.ejs')%> 

<body>
    <%-include('partials/navbar.ejs')%>

        <!-- <%= /* exibir */ %> -->
        <div class="container">
            <hr>
            <h1><%= pergunta.titulo %></h1>
            <p><%= pergunta.descricao %></p>
            <hr>
            
            <form method="POST" action="/responder">
                <h4>Sua resposta:</h4>
                <label>Resposta:</label>
                <textarea placeholder="Digite sua resposta aqui" class="form-control" name="corpo"></textarea><br>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button type="submit" class="btn btn-warning">Responder</button>
            </form>

            <hr>
            <h4>Respostas</h4>
            <hr>
            <% respostas.forEach(resposta =>{%>
                <br>
                <div class="card">
                    <div class="card-body">
                        <p><%= resposta.corpo %><br></p>

                    </div>

                </div>                
            <% }) %>
        </div> <!-- /* container */ -->
</body>

<%-include('partials/footer.ejs')%> 